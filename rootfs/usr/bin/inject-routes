#!/usr/bin/env bash
alias ip='sudo ip'
ip rule add from 192.168.54.100 lookup 111
ip route add 192.168.54.0/24 dev vmbr0 table 111
ip route add default via 192.168.54.1 dev vmbr0 table 111

